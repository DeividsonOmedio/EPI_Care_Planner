<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Epi_Care_Planner.Pages.FuncionarioPages.SolicitacaoPage"
             Title="Solicitacao">
    <VerticalStackLayout
                         VerticalOptions="Center" 
                         HorizontalOptions="Center" >
        <Label 
            Text="Solicitar EPI"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            TextTransform="Uppercase"
            Margin="50"
            FontSize="Title"/>
        
        <Label
            Text="Nome do EPI:"/>
        <Picker 
            x:Name="pickerEpi"
            Title="Selecione um EPI"
            TextColor="White"
            BackgroundColor="Black"
            ItemDisplayBinding="{Binding Nome}"
            SelectedItem="{Binding Id}"
            SelectedIndexChanged="pickerEpi_SelectedIndexChanged">
            
        </Picker>
        <Label
            Text="Para Quando:"/>

        <Picker 
         x:Name="pickerQuando"
         Title="Selecione uma opção"
         TextColor="Silver"
         BackgroundColor="Black"
         SelectedIndexChanged="pickerQuando_SelectedIndexChanged">
            <Picker.Items>
                <x:String>Agora</x:String>
                <x:String>Agendar</x:String>
            </Picker.Items>
        </Picker>
        <Entry
            Placeholder="Digite Data/Hora"
            x:Name="txtAgendar"
            Keyboard="Text"
            ClearButtonVisibility="WhileEditing"
            IsVisible="false"/>
        <Label
            Text="Comentario:"/>
        <Entry
            Placeholder="Comente se achar necessário"
            PlaceholderColor="DarkGrey"
            x:Name="txtcomentario"
            Keyboard="Text"
            ClearButtonVisibility="WhileEditing"/>

        <Button
            Text="Solicitar"
            x:Name="btnSolicitarEmprestimo"
            Clicked="btnSolicitarEmprestimo_Clicked"
            Margin="36"
            WidthRequest="200"
            TextColor="Black"/>     
    </VerticalStackLayout>
</ContentPage>
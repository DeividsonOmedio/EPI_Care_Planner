<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Epi_Care_Planner.Pages.Modal.ModalEmprestar"
             Title="ModalEmprestar"
             BackgroundColor="Black">
    <VerticalStackLayout
        VerticalOptions="CenterAndExpand">
        <Label Text="Confirmar Emprestimo" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
               Margin="50"
               FontSize="Title"
               TextTransform="Uppercase"
               FontAttributes="Bold"
                TextColor="White"/>
        <VerticalStackLayout
            Margin="16"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label Text="Comentario:"
                     TextColor="White"
    Margin="0,0,0,10"/>
            <Entry
                x:Name="txtComentario"
                Placeholder="Escreva aqui o comentario" 
                BackgroundColor="White"/>
            <Button Text="Confirmar"
                    x:Name="btnConfirmar"
                    Clicked="btnConfirmar_Clicked"
                    Margin="20"/>
        </VerticalStackLayout>
        <Button Text="Fechar Modal" Clicked="FecharModal_Clicked" WidthRequest="100"/>
    </VerticalStackLayout>
</ContentPage>